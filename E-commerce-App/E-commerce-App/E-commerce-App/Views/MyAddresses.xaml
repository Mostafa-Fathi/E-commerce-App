<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_commerce_App.Views.MyAddresses" Title="MyAddresses">
    <ContentPage.Content>
        <StackLayout Spacing="20" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="location1"/>
            <Label Text="No added addresses yet"
                   HorizontalTextAlignment="Center"
                   TextColor="Black" FontSize="20"/>
            <Button Text="Add New Address" BackgroundColor="Red"
                    TextTransform="None" TextColor="White" Margin="50,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>