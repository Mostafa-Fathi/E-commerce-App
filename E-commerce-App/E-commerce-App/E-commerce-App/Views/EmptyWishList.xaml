<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_commerce_App.Views.EmptyWishList" Title="">
    <ContentPage.Content>
        <StackLayout Spacing="20" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
           
            <Label Text="No items in wishlist"
                   HorizontalTextAlignment="Center"
                   TextColor="Black" FontSize="20"/>
            <Button Text="Start Now" BackgroundColor="Red"
                    TextTransform="None" TextColor="White" 
                    Margin="20,0" Clicked="GoToCategoryPage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>