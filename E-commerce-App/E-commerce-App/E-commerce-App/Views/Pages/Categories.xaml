<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_commerce_App.Views.Pages.Categories">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Test}"/>
            <Button Text="yr" Clicked="Button_Clicked"/>
            <ListView Margin="50" x:Name="listTest" ItemsSource="{Binding CategoriesList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding name}" Detail="{Binding img}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>