<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_commerce_App.Views.MyOrders">
    <ContentPage.Content>
        <StackLayout Spacing="20" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="market"/>
            <Label Text="No Orders Till Now"
                   HorizontalTextAlignment="Center"
                   TextColor="Black" FontSize="20"/>
            <Label Text="Start Now" FontSize="17"
                   HorizontalTextAlignment="Center"
                   TextColor="Black" />
            <Button Text="Back" BackgroundColor="Red" Clicked="BackToAccountDetails"
                    TextTransform="None" TextColor="White" Margin="50,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>